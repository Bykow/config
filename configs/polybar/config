[module/wlan]
type = internal/network
interface = wlp1s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-foreground = ${colors.foreground}
format-connected-background = ${colors.background}
format-connected-padding = 2
label-connected = %essid%
format-padding = 1

format-disconnected = 

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground}

[module/eth]
type = internal/network
interface = enp0s20f0u1u2u1
interval = 3.0

format-connected-padding = 1
format-connected-foreground = ${colors.foreground}
format-connected-background = ${colors.background}
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground}
label-connected = %local_ip%
format-padding = 1

format-disconnected =

[module/date]
type = internal/date
interval = 1

date = %d.%m.%y
date-alt = " %Y-%m-%d"

time = %H:%M:%S
time-alt = %H:%M:%S

format-prefix =
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 2

label = %date%    %time%

[module/battery]
type = custom/script
exec = ~/.config/polybar/scripts/battery
interval = 1
format-prefix = " "
format-padding = 1
format-foreground = ${colors.foreground}
format-background = ${colors.background}

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = "python ~/dotfile/configs/polybar/scripts/spotify -f '{play_pause} {artist}: {song}'" 
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 1

[module/volume]
type = custom/script
exec = ~/dotfile/configs/polybar/scripts/getvolume
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 1

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0
