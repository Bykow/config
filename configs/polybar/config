[module/wlan]
inherit = module/default
type = internal/network
interface = wlan0
interval = 3

format-connected = <ramp-signal> <label-connected>
format-connected-padding = 1
label-connected = %essid% %local_ip%
;| %downspeed:min%  %upspeed:min%

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
