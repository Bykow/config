[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-foreground = #1e1e20
format-background = #c6723a
format-padding = 2

label = %date% %time%

[module/battery]
type = custom/script
exec = ~/.config/polybar/scripts/battery
interval = 1
format-prefix = " "
format-padding = 1
format-foreground = #1e1e20
format-background = #c6723a

[module/previous]
type = custom/script
interval = 86400
format = "%{T3}<label>"
format-padding = 2
; Previous song icon
exec = echo ""
format-foreground = #1e1e20
format-background = #c6723a
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

[module/next]
type = custom/script
interval = 86400
format = "%{T3}<label>"
format-padding = 2
; Next song icon
exec = echo ""
format-foreground = #1e1e20
format-background = #c6723a
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

[module/spotify]
type = custom/script
interval = 1
format = <label>
format-padding = 1
format-foreground = #1e1e20
format-background = #c6723a
exec = python ~/.config/polybar/scripts/spotify/spotify_status.py -f '{artist}: {song}'
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"

[settings]
screenchange-reload = true

