[colors]
background = #1e1e20
foreground = #e6a57a
mode-foreground = #e39866
focused-background = #e39866
focused-foreground = #1e1e20
unfocused-foreground = #e39866
visible-foreground = #e39866
urgent-background = #BA2922


[bar/main]
width = 100%
height = 27
radius = 0
fixed-center = true

background = ${colors.background}

line-size = 3
line-color =

border-size = 0
border-color =

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = "Source Code Pro Semibold:size=10;1"
font-1 = "Font Awesome 5 Free:style=Solid:size=10;1"
font-2 = "Font Awesome 5 Brands:size=10;1"

modules-left = i3
modules-center = date 
modules-right = spotify wlan eth volume battery 

tray-position = right
tray-padding = 1


[bar/second]
inherit = bar/main
monitor = DP-1

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-background = ${colors.background}
label-mode-foreground = ${colors.mode-foreground}

label-focused = %icon%
label-focused-background = ${colors.focused-background}
label-focused-foreground = ${colors.focused-foreground}
label-focused-padding = 2

label-unfocused = %icon%
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.unfocused-foreground}
label-unfocused-padding = 2

label-visible = %icon%
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.visible-foreground}
label-visible-padding = 2

label-urgent = %icon%
label-urgent-background = ${colors.urgent-background}
label-urgent-padding = 2

ws-icon-0 = "1;1"
ws-icon-1 = "2;2"
ws-icon-2 = "3;3"
ws-icon-3 = "4;4"
ws-icon-4 = "5;5"
ws-icon-5 = "6;6"
ws-icon-6 = "7;7"
ws-icon-7 = "8;8"
