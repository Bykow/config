[module/date]
type = internal/date
date = %d.%m.%Y%
time = %H:%M
interval = 1
format-underline = #72A1B2
label = %date%  -  %time%
label-font = 10

[module/battery]
type = custom/script
exec = ~/.config/polybar/scripts/battery
interval = 1
format-prefix = " "
format-underline = #72A1B2

[module/wlan]
type = custom/script
exec = iwgetid -r
interval = 1
format-prefix = " "
format-overline = #72A1B2

[module/brightness]
type= custom/script
exec = ~/.config/polybar/scripts/getbrightness
interval = 0.5
format-underline = #72A1B2

[module/volume]
type = custom/script
exec = ~/.config/polybar/scripts/getvolume
interval = 0.5
format-underline = #72A1B2

[module/memory]
type = internal/memory
format-prefix = " "
format-underline = #72A1B2
interval = 3

[module/cpu]
type = internal/cpu
format-prefix = " "
format-underline = #72A1B2
interval = 1

[module/title]
format-overline = #72A1B2
type = internal/xwindow

[module/temperature]
type = internal/temperature
interval = 1
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input

format-underline = #72A1B2
format = <ramp> <label>
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 

format-warn-underline = #f00
warn-temperature = 75
format-warn =  <label-warn>
label-warn-foreground = #f00

[module/wip]
format-connected-overline = #72A1B2
format-disconnected-overline = #72A1B2
type = internal/network
interface = wlp1s0
interval = 2

label-connected = " %local_ip%     %downspeed%    %upspeed%"
label-disconnected = "OFFLINE"

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python ~/.config/polybar/scripts/spotify_status.py -f '{artist}: {song}'
format-underline = #1db954