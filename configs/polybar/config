[module/eth]
inherit = module/default
type = internal/network
interface = eth0
interval = 3

format-connected-padding = 1
format-connected-prefix = " "
label-connected = %local_ip%
;| %downspeed:min%   %upspeed:min%

[module/date]
inherit = module/default
type = internal/date

date = %d.%m.%y
date-alt = " %Y-%m-%d"
time = %H:%M:%S
time-alt = %H:%M:%S

label = %date%    %time%

[module/battery]
inherit = module/default
type = custom/script
exec = ~/.config/polybar/scripts/battery
format-prefix = " "

[module/memory]
inherit = module/default
type = internal/memory
interval = 1
format = <label>
format-prefix = " "
label = %percentage_used%%

[module/cpu]
inherit = module/default
type = internal/cpu
interval = 1
format = <label>
format-prefix = " "
label = %percentage%%

[module/pulseaudio-tail]
inherit = module/default
type = custom/script
exec = ~/.config/polybar/scripts/pulseaudio-tail.sh
tail = true
click-right = exec pavucontrol &
click-left = ~/.config/polybar/scripts/pulseaudio-tail.sh --mute
scroll-up = ~/.config/polybar/scripts/pulseaudio-tail.sh --up
scroll-down = ~/.config/polybar/scripts/pulseaudio-tail.sh --down

[settings]
screenchange-reload = true

[global/wm]
